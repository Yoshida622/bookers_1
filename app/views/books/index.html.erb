<h1>Books</h1>
<table>
  <tr>
    <th scope="col"><strong>Title</strong></th>
    <th scope="col"><strong>Body</strong></th>
    <th scope="col"></th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title%></td>
      <td><%= book.body%></td>
      <td><%= link_to "Show",book_path(book.id)%></td>
      <td><%= link_to "Edit",edit_book_path(book.id)%></td>
      <td>
        <%= link_to "Destroy",book_path(book.id),method: :delete, "data-confirm" => "Are you sureï¼Ÿ"%>
      </td>
    </tr>
    <% end %>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
